{
  "name": "sustainability-signals",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5174 --strictPort",
    "dev:functions": "node scripts/dev_functions.mjs",
    "build": "tsc -b && vite build",
    "deploy": "npm run build && wrangler pages deploy dist --project-name sustainability-signals --branch main --commit-dirty=true",
    "lint": "eslint .",
    "cf:preindex": "node scripts/cf_preindex_reports.mjs",
    "cf:score:disclosure": "node scripts/cf_score_disclosure_quality.mjs",
    "cf:score:entities": "node scripts/cf_score_entity_extract.mjs",
    "export:esgbert": "node scripts/export_esgbert_report_summary.mjs",
    "retry:sections": "python -u scripts/retry-failed-sections.py",
    "export:manual": "python -u scripts/export-manual-followup.py",
    "generate:reports-index": "python -u scripts/generate-reports-index.py",
    "upload:r2": "python -u scripts/upload-r2-wrangler.py --bucket sustainability-signals --out-log reports_artifacts/manifests/r2-upload-sustainability-signals.ndjson",
    "cleanup:r2:wrong": "python -u scripts/cleanup-wrong-r2-uploads.py",
    "preview": "vite preview"
  },
  "dependencies": {
    "@cloudflare/containers": "^0.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet-async": "^2.0.5",
    "react-markdown": "^10.1.0",
    "react-pdf": "^10.3.0",
    "react-router": "^7.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "react-helmet-async": {
      "react": "^16.8.0 || ^17 || ^18 || ^19"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@tailwindcss/postcss": "^4.0.8",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25.0.10",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "pdf-lib": "^1.17.1",
    "postcss": "^8.5.2",
    "tailwindcss": "^4.0.8",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^7.3.1",
    "wrangler": "^4.60.0"
  }
}
